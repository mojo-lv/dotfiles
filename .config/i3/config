bindsym XF86AudioMute exec --no-startup-id amixer sset 'Master' toggle
bindsym XF86AudioLowerVolume exec --no-startup-id amixer sset 'Master' 5%-
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer sset 'Master' 5%+

bindsym $mod+g mode "game"
mode "game" {
	bindsym $mod+Escape mode "default"
	bindsym XF86AudioMute exec --no-startup-id amixer sset 'Master' toggle
	bindsym XF86AudioLowerVolume exec --no-startup-id amixer sset 'Master' 5%-
	bindsym XF86AudioRaiseVolume exec --no-startup-id amixer sset 'Master' 5%+
}

set $mode_system 系统: 注销(O) 关机(S) 重启(R)
bindsym $mod+Ctrl+Delete mode "$mode_system"
mode "$mode_system" {
	bindsym o exec i3-msg exit
	bindsym s exec systemctl poweroff
	bindsym r exec systemctl reboot
	bindsym Escape mode "default"
}

for_window [class="qv2ray"] floating enable, move absolute position center
for_window [class="Blueman-manager"] floating enable, resize set 900 500, move absolute position center
for_window [class="Xfce4-appfinder"] floating enable, resize set 450 550, move position 0 500

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:DejaVu Sans Mono 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move focused window
bindsym $mod+Shift+l move up
bindsym $mod+Shift+k move down
bindsym $mod+Shift+j move left
bindsym $mod+Shift+semicolon move right
bindsym $mod+Shift+Up focus left, split v, focus right, focus up, move left, focus right
bindsym $mod+Shift+Down split v, focus right, move left, focus up, move right
bindsym $mod+Shift+Left focus left, split v, focus right, move left
bindsym $mod+Shift+Right focus right, split v, focus left, move right

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+w layout toggle tabbed stacking
bindsym $mod+e layout toggle split

# Make the currently focused window a scratchpad
bindsym $mod+s move scratchpad
bindsym $mod+Shift+s scratchpad show

# toggle tiling / floating
bindsym $mod+x floating toggle

# change focus between tiling / floating windows
bindsym $mod+Shift+x focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+z focus child

