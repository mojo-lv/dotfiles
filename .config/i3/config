bindsym $mod+space exec --no-startup-id "rofi -show drun"
bindsym $mod+Tab exec --no-startup-id "rofi -show window"
bindsym $mod+Return exec --no-startup-id xfce4-terminal --drop-down -e zsh
bindsym $mod+Shift+Return exec --no-startup-id "$i3layout; xfce4-terminal -e fish"
bindsym $mod+Shift+p exec --no-startup-id "$i3layout; xfce4-terminal -e 'proxychains4 fish'"
bindsym $mod+Shift+g exec "i3-nagbar -t warning -m '切换显卡将退出系统' -B '切换显卡' '~/scripts/GraphicsSwitcher.sh && i3-msg exit'"

bindsym $win+r exec --no-startup-id "$i3layout; xfce4-terminal -e ranger"
